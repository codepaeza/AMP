<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FallarasopormtActivity"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:layout_weight="0.80">

        <RadioGroup
            android:id="@+id/opciones_fallarasopormt"
            android:layout_width="match_parent"
            android:layout_height="538dp"
            android:layout_below="@+id/textView"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="25dp"
            android:background="#b1faad"
            android:paddingRight="50dp">

            <RadioButton
                android:id="@+id/ramo401"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Estructura con riesgo de volcamiento"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo403"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Apoyos desaplomados"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo404"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Apoyo fisurado ó deteriorado"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo405"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Crucetas de madera sueltas, deformadas ó deterioradas"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo408"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Cruceta metálica suelta ó deformada"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo410"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Apoyo de madera deteriorado"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo412"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Punto Físico ilegible ó faltante"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo413"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Uso de apoyo por terceros sin autorización"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo416"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Vegetación trepadora para talar"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo417"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Presencia de nidos"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo418"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Templete deteriorado ó desconectado"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:text="Fallas Aislamiento"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

</LinearLayout>