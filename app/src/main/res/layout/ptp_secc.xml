<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PtpseccActivity"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:layout_weight="0.80">

        <RadioGroup
            android:id="@+id/opciones_ptpsecc"
            android:layout_width="match_parent"
            android:layout_height="538dp"
            android:layout_below="@+id/textView"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="25dp"
            android:background="#b1faad"
            android:paddingRight="50dp">

            <RadioButton
                android:id="@+id/ptp306"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Criticidad desde inspección termográfica"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ptp307"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Distancias insuficientes entre elementos en tensión"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ptp308"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="DPS ausentes ó con anomalías"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/ptp309"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Seccionadores MT que no maniobran, puenteados ó degradados"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/ptp310"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Secionadores MT ó con aisladores rotos"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>
    </ScrollView>

</LinearLayout>