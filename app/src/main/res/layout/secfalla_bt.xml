<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecfallabtActivit"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:text="Sección de Línea BT"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/codensa_logo"
        android:src="@mipmap/codensa_logo"/>

    <RadioGroup
        android:id="@+id/opciones_secfallabt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_below="@+id/textView"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_margin="25dp"
        android:background="#9af995"
        android:paddingRight="50dp">

        <RadioButton
            android:id="@+id/bt_b001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Interruptor/Seccionador portafusible para BT deteriorado, deformado, puenteado, roto"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Cables ó conductor de BT con anomalía (con hilos ó empalmes rotos ó aislamiento deteriorado)"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Circuito BT sobrecargado"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Circuito BT con desequilibrio por cargabilidad entre fases"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Fusibles con intensidades nominales diferentes por fase"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Número de identificación (punto físico) del poste faltante ó ilegible"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b041"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Pases de conexión, sueltos sin conectores ó degradados para rehacer"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

</LinearLayout>