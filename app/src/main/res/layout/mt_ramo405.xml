<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FallaraaislemtActivity"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:layout_weight="0.80">

        <RadioGroup
            android:id="@+id/opciones_ramo405mt"
            android:layout_width="match_parent"
            android:layout_height="538dp"
            android:layout_below="@+id/textView"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="25dp"
            android:background="#b1faad"
            android:paddingRight="50dp"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/ramo405_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="La afectación de la cruceta compromete la estabilidad y aseguramiento de las redes"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo405_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Afectación donde se encuentran los tornillos pasantes o abrazaderas de las crucetas sin comprometer la estabilidad  y
aseguramiento de las redes"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/ramo405_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Se encuentra girada incumpliendo distancia de seguridad"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo405_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Pequeñas grietas o rajaduras pero no compromete la estabilidad de la estructura y/o de la red "
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

    </ScrollView>


</LinearLayout>