<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FallaraseccmtActivity"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:layout_weight="0.80">

        <RadioGroup
            android:id="@+id/opciones_fallaraseccmt"
            android:layout_width="match_parent"
            android:layout_height="538dp"
            android:layout_below="@+id/textView"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="25dp"
            android:background="#b1faad"
            android:paddingRight="50dp">

            <RadioButton
                android:id="@+id/ramo601"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Aisladores de soporte en seccionador rotos"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo603"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Soportes metálicos deteriorados"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo604"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Contactos deteriorados ó posición de cierre incierta"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo605"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Presión insuficiente en seccionador con aislamiento en SF6"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo606"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Carcasa metálica con corrosión en seccionadores con aislamiento en SF6"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo607"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Bujes/Codos con anomalías en seccionadores con aislamiento en SF6"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo608"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="PT con rastros de descarga"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/ramo610"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Seccionadores MT que no maniobran, puenteados ó degradados"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:text="Fallas Seccionadores"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

</LinearLayout>