<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FallaracondmtActivity"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="487dp"
        android:orientation="vertical"
        android:layout_weight="0.80">

        <RadioGroup
            android:id="@+id/opciones_ramo208mt"
            android:layout_width="match_parent"
            android:layout_height="538dp"
            android:layout_below="@+id/textView"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="25dp"
            android:background="#b1faad"
            android:paddingRight="50dp"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/ramo208_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Red de 34,5 kV: Elemento extraño rompe la distancia de seguridad horizontal (56 cm)."
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/ramo208_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Red de 13,2/11,4 kV: Elemento extraño rompe la distancia de seguridad horizontal (33 cm)."
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/ramo208_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Estructura doble nivel circuitos 34,5 kV y 34,5/13,2 kV: Elemento extraño rompe la distancia de seguridad vertical (120 cm) a la fase más próxima."
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/ramo208_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Estructura doble nivel circuitos 13,2/11,4 kV: Elemento extraño rompe la distancia de seguridad vertical a la fase más próxima en una distancia menor o igual a 60 cm."
                android:onClick="onRadioButtonClicked" />
            <RadioButton
                android:id="@+id/ramo208_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="Estructura doble nivel circuitos: El elemento  extraño no representa riesgo de contacto horizontal ó vertical entre las fases."
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:id="@+id/ramo208_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:text="El elemento extraño no presenta riesgo de afectación en la continuidad del servicio."
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:text="Fallas Conductor"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

</LinearLayout>