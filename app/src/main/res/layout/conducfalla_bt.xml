<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConducfallabtActivity"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:text="Conductores"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"

        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/codensa_logo"
        android:src="@mipmap/codensa_logo"/>

    <RadioGroup
        android:id="@+id/opciones_conducfallabt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_below="@+id/textView"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_margin="25dp"
        android:background="#9af995"
        android:paddingRight="50dp">

        <RadioButton
            android:id="@+id/bt_b007"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Conductor distensionado ó con excesiva catenaria"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b008"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Presencia de cuerpos extraños colgando en la red"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b009"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Anomalía en distancias de seguridad horizontal/vertical frente a construcciones"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Árboles a podar con intervención en la red"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b011"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Deficiencia en distancias de seguridad frente a zonas abiertas en vertederos de basuras, canteras, minas"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Aisladores de soporte rotos, contaminados ó deteriorados"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/bt_b044"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Deficiencia en distancias de seguridad (vertical/horizontal) entre conductores en la misma estructura ó en recorridos paralelos"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

</LinearLayout>